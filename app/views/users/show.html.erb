<h2 id="profile-header">Profile Page for <%= @user.email %></h2>
<div class="row">
  <div class="col-sm-6">
    <h3>Your Tweets:</h3>
    <div id="statuses">
      <ul id="tweet_list">
        <%= render @user.tweets %>
      </ul>
    </div>
  </div>

  <form action="/" method="get" class="form-group">
    <div class="col-sm-4">
      <input name="search[query]" type="text" class="form-control" placeholder="search users">
    </div>
    <div class="col-sm-2">
      <button class="btn btn-primary">Search</button>
    </div>
  </form>
</div>


<%= link_to "Home", tweets_path, :class => 'btn btn-primary' %>
<%= link_to "Add Tweet", new_tweet_path, :id => 'new_tweet', :class => 'btn btn-primary', remote: true %>
